<div class="container explanation" id="explanation">
	<div class="row">
		<div class="col-sm-12">
				<header class="topic-name">
					{{data.topic.name}}
				</header>
		</div>
	</div>
	<div class="row">
			<div class="col-md-9">
				<article id="content" class="explanation-content">
					<div id="{{data.content.slug}}" class="explanation-section">
						<h2>{{data.content.title}}</h2>
						{{{ data.content.html }}}
						<a href="#explanation" class="back-to-top">Back to Top</a>
					</div>
				</article>
			</div>

				<div class="col-md-3">
					<div id="contents" class="topic-contents">
						<h2>Contents</h2>
						<div class="explanation-option">
							<a class="explanation-link" href="/explanations/{{data.topic.slug}}">Summary</a>
						</div>
						{{# each data.explanations}}
							<div class="explanation-option">
								<a class="explanation-link" href="/explanations/{{ @root.data.topic.slug }}/{{slug}}">
									{{{title}}}
								</a>
							</div>
						{{/each}}
					</div>
				</div>
	</div>
</div>
