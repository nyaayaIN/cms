<div class="container explanation">
	<div class="row">
		<div class="col-sm-12">
				<header class="topic-name">
					{{data.topic.name}}
				</header>
		</div>
	</div>
	<div class="row">
			<div class="col-md-9">
				<article id="content" class="explanation-content">
					{{#if data.currentExplanation}}
						<h2>{{data.currentExplanation.title}}</h2>
						{{{	data.currentExplanation.content.html }}}
					{{else}}
						<h2>Summary</h2>
						{{{data.topic.summary.html}}}
					{{/if}}
				</article>
			</div>

				<div class="col-md-3">
					<div id="contents" class="topic-contents">
						<h2>Contents</h2>

						<div class="explanation-option">
							<a class="explanation-link" href="/explanations/{{ data.topic.slug }}/">Summary</a>
						</div>
						{{# each data.explanations.results}}
							<div class="explanation-option">
								<a class="explanation-link" href="/explanations/{{ @root.data.topic.slug }}/{{slug}}">
									{{{title}}}
								</a>
							</div>
						{{/each}}
					</div>
				</div>
	</div>
</div>
